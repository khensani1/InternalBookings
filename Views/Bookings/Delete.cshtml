@model Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>
<h3>Are you sure you want to delete this booking?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Resource</dt>
        <dd class="col-sm-10">@Model.Resource?.Name</dd>
        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>
        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>
        <dt class="col-sm-2">Booked By</dt>
        <dd class="col-sm-10">@Model.BookedBy</dd>
        <dt class="col-sm-2">Purpose</dt>
        <dd class="col-sm-10">@Model.Purpose</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div> 