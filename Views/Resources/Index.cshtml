@model IEnumerable<Resource>

@{
    ViewData["Title"] = "Resources";
    var available = ViewBag.SearchAvailable;
    var options = new List<(string Value, string Text)>
    {
        ("", "All"),
        ("true", "Available"),
        ("false", "Unavailable")
    };
    var optionHtml = new System.Text.StringBuilder();
    foreach (var opt in options)
    {
        var selected = (available == null && opt.Value == "") ||
                       (available != null && available.ToString().ToLower() == opt.Value)
                       ? " selected" : "";
        optionHtml.Append($"<option value=\"{opt.Value}\"{selected}>{opt.Text}</option>");
    }
}

<h1>Resources</h1>
<form method="get" class="form-inline mb-3">
    <input type="text" name="searchName" value="@(ViewBag.SearchName ?? "")" class="form-control mr-2" placeholder="Name" />
    <input type="text" name="searchLocation" value="@(ViewBag.SearchLocation ?? "")" class="form-control mr-2" placeholder="Location" />
    <select name="searchAvailable" class="form-control mr-2">
        @Html.Raw(optionHtml.ToString())
    </select>
    <button type="submit" class="btn btn-primary">Search</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Reset</a>
</form>
<p>
    <a class="btn btn-primary" asp-action="Create">Add Resource</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Available</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Location</td>
            <td>@item.Capacity</td>
            <td>@(item.IsAvailable ? "Yes" : "No")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this resource?');">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table> 